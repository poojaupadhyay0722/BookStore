extends layout
block content
    .row.banner
        .col-12
            h1 Enter the book id and name to delete 
    .row
        .col-12.col-md-8
            form(action="/delete", method="post", role="form")
                .form-group.row
                    label.col-10.col-sm-2.col-form-label(for="Id") Id
                    .col-12.col-sm-10
                        input#name.form-control(name="Id")
                .form-group.row
                    label.col-10.col-sm-2.col-form-label(for="name") Name
                    .col-12.col-sm-10
                        input#name.form-control(name="name")
                button.btn.btn-primary.float-right Delete book
    .col-12.col-md-4   