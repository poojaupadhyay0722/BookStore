extends layout
block content
    .row.banner
        .col-12
            h1 Enter book details to edit
    .row
        .col-12.col-md-8
            form(action="/edit", method="post", role="form")
                .form-group.row
                    label.col-10.col-sm-2.col-form-label(for="Id") Id
                    .col-12.col-sm-10
                        input#name.form-control(name="Id")
                .form-group.row
                    label.col-10.col-sm-2.col-form-label(for="name") Name
                    .col-12.col-sm-10
                        input#name.form-control(name="name")
                .form-group.row
                    label.col-10.col-sm-2.col-form-label(for="author") Author
                    .col-12.col-sm-10
                        input#name.form-control(name="author")
                .form-group.row
                    label.col-10.col-sm-2.col-form-label(for="genre") Genre
                    .col-12.col-sm-10
                        input#name.form-control(name="genre")
                .form-group.row
                    label.col-sm-2.col-form-label(for="comments") Review
                    .col-sm-10
                        textarea#review.form-control(name="comments", rows="5")
                button.btn.btn-primary.float-right Edit book
    .col-12.col-md-4   